  .page-header
    h3(data-bind="text: room_name")
  .page-body
    .roommates-header
      .roommate
        span 
        span
        span 
        span
    .roommates(data-bind="foreach : roommates ")
      .roommate
        span(data-bind="if: (id + '') == $root.me().id")
          | ★
        span(data-bind="text: is_roommaster ? '房主' : '' ")
        span(data-bind="text: id")
        span(data-bind="text: is_ready ? '已准备' : '' ")

  .page-footer
