doctype html
html
  head
    link(rel="stylesheet", type="text/css", href="resource/app.less")
    link(rel="stylesheet", type="text/css", href="http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css")
    title MAFIA
  body
    .g-header
      h1 MAFIA
      // ko if:tools
      div.toolbar
        div
          label goto page :
          div
            each page in ['hall','room','game']
              button(data-bind="click:page.bind(null,'#{page}')")= page
        div
          label room func :
          div
            each func in ['add_room', 'add_roommate', 'add_player', 'add_message']
              button(data-bind="click:#{func}") #{func}
          div
            button(data-bind="toggle:night") toggle_night
            button(data-bind="click:random_saying") random_saying
            each value in ['speaking','voting']
              button(data-bind="click:toggle_skill_stage('#{value}')") #{value}
      // /ko
    .g-content
      block content
  
    script(src="/socket.io/socket.io.js")
    script(src="http://cdn.staticfile.org/knockout/3.2.0/knockout-debug.js")
    script(src="http://cdn.staticfile.org/require.js/2.1.15/require.js")
    script(src="http://underscorejs.org/underscore-min.js")
    script(src="/app.js")
    script(type="application/javascript", src="//127.0.0.1:35729/livereload.js")