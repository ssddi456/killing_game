doctype html
html
  head
    link(rel="stylesheet", type="text/css", href="resource/app.less")
  body
    .wrapper
      h1 MAFIA

      div.toolbar
        div
          label goto page :
          span
            each page in ['hall','room','speak','vote','game']
              button(data-bind="click:page.bind(null,'#{page}')")= page
        div
          label room func :
          span
            each func in ['add_room', 'add_roommate', 'add_player', 'add_message']
              button(data-bind="click:#{func}") #{func}
            button(data-bind="toggle:night") toggle_night
      block content
  
    script(src="/socket.io/socket.io.js")
    script(src="http://cdn.staticfile.org/knockout/3.2.0/knockout-debug.js")
    script(src="http://cdn.staticfile.org/require.js/2.1.15/require.js")
    script(src="/app.js")
    script(type="application/javascript", src="//127.0.0.1:35729/livereload.js")